<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <form class="list_form" action="/" method="post">
        <div class="input_todo">
          <input type="text" name="todo" placeholder="add todo...">
          <input type="submit" name="submit" value="submit">
        </div>
        </form>
        {{#list}}
          <div class="todo">
          <li>{{todos}}
            <form class="" action="/{{id}}/delete" method="post">
              <button type="submit" >Delete</button>
            </form>
          </li>
        </div>
        {{/list}}
